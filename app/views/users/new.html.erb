
		<label class="control-label col-sm-2">First Name</label>
		<div class="col-sm-5">
<%= form_for(@user) do |f| %>
<%= f.text_field(:firstname, {:placeholder => "First Name", :required => true}) %>
</div>

	<label class="control-label col-sm-2">Last Name</label>
	<div class="col-sm-5">
<%= f.text_field(:lastname, {:placeholder => "Last Name", :required => true}) %>
</div>

	<label class="control-label col-sm-2">E-mail</label>
	<div class="col-sm-5">
<%= f.text_field(:email, {:placeholder => "E-mail", :required => true}) %>
</div>

	<label class="control-label col-sm-2">Create Password</label>
	<div class="col-sm-5">
<%= f.password_field(:password, {:placeholder => "Password", :required => true}) %>
</div>

	<label class="control-label col-sm-2">Confirm Password</label>
	<div class="col-sm-5">
<%= f.password_field(:password_confirmation, {:placeholder => "Confirm Password", :required => true}) %>
</div>

	<div class="col-sm-offset-2 col-sm-5">
<%= f.submit("Create Account") %>
</div>



<% end %>

